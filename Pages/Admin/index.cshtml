@page
@model CotizacionesPersonales.Pages.IndexModel

@{
    ViewData["Title"] = "Admin Home";
}

<h3>DashBoard</h3>

<table>
    <caption>Clientes</caption>
    <thead>
        <tr>
            <th>Nombre </th>
            <th>telefono </th>
            <th>Direccion </th>
            <th>Email </th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model.Clientes ){
            <tr>
                <td>@cliente.NombreCliente</td>
                <td>@cliente.TelefonoCliente</td>
                <td>@cliente.DireccionCliente</td>
                <td>@cliente.EmailCliente</td>
                <td> <a asp-page="/Admin/AddClientes" asp-route-id ="@cliente.ClienteID">Editar</a>  </td>
            </tr>
        }
    </tbody>
</table>
<br />

<table>
    <caption>Servicios</caption>
    <thead>
        <tr>
            <th>Servicio</th>
            <th>Descripcion </th>
            <th>Precio </th>
            <th>Editar </th>
            <th>Detalle </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var servicio in Model.Servicios ){
            <tr>
                <td>@servicio.NombreServicio </td>
                <td>@servicio.DescripcionServicio </td>
                <td>@servicio.PrecioServicio.ToString("C", CultureInfo.CreateSpecificCulture("en-US")) </td>
                <td> <a asp-page="/Admin/AddServicios" asp-route-id ="@servicio.ServicioID">Editar</a>  </td>
                <td> <a asp-page="/Admin/ViewDetalleServicio" asp-route-id ="@servicio.ServicioID">Detalle</a>  </td>
            </tr>
        }
    </tbody>
</table>

